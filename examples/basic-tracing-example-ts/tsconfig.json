{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "src",
    "outDir": "bin",
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
